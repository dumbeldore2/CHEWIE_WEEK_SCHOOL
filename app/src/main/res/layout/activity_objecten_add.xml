<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ObjectenAdd"
    android:background="@drawable/colorbackground"
    android:id="@+id/ogConstraintLayoutObjectenAdd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp">
        <TextView
            android:id="@+id/vakObjectadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="vak"
            android:layout_margin="30dp"
            android:textSize="35dp"/>
        <TextView
            android:id="@+id/weekObjectadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="week"
            android:layout_margin="30dp"
            android:textSize="35dp"/>
        <EditText
            android:id="@+id/editTextToevoegenObject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="add here."
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/errorMessageAddObject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/error"/>
        <Button
            android:id="@+id/addToevoegenObject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:background="@drawable/colorsystem"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/backToevoegenObject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="back"
            android:background="@drawable/colorsystem"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
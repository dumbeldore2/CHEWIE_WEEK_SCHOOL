<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/colorbackground">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonVak1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/colorgreymain"
            android:text="V1" />

        <Button
            android:id="@+id/buttonVak2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/colorgreymain"
            android:text="V2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="30dp">
        <Button
            android:id="@+id/buttonVak3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V3"
            android:layout_margin="30dp"
            android:background="@drawable/colorgreymain"
            />
        <Button
            android:id="@+id/buttonVak4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V4"
            android:layout_margin="30dp"
            android:background="@drawable/colorgreymain"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="30dp">
        <Button
            android:id="@+id/buttonVak5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonVak3"
            android:layout_margin="30dp"
            android:background="@drawable/colorgreymain" />
        <Button
            android:id="@+id/buttonVak6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V6"
            app:layout_constraintStart_toEndOf="@id/buttonVak5"
            app:layout_constraintTop_toBottomOf="@id/buttonVak4"
            android:layout_margin="30dp"
            android:background="@drawable/colorgreymain" />

    </LinearLayout>
    <Button
        android:id="@+id/addLesButton"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="change"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        android:background="@drawable/colorsystem"/>

</androidx.constraintlayout.widget.ConstraintLayout>